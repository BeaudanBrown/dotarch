#!/bin/bash

[[ -z $1 ]] && exit
[[ -z $2 ]] && exit
[[ -z $3 ]] && exit
appName=$1
className1=$2
className2=$3

if ! >/dev/null pgrep -i $appName || ! wmctrl -lx | grep -q -i $className1.$className2; then
  # App isn't open
  echo 'Opening app'
  $appName
  sleep 2
else
    # App is open
    nodeID=$(wmctrl -lx | awk "/$className1.$className2/ {print toupper(\$1)}")
    bspwm_toggle_scratch_node $nodeID
fi


